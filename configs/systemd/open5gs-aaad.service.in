[Unit]
Description=Open5GS AAA Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=@bindir@/open5gs-aaad -c @sysconfdir@/open5gs/aaa.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
